{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {% if not form.vars.valid %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <b>Hiba!</b> Kérjük töltsd ki az összes mezőt!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {# Neved #}
    <div class="form-group">
        {{ form_label(form.name, 'Neved') }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>

    {# Email címed #}
    <div class="form-group">
        {{ form_label(form.email, 'E-mail címed') }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>

    {# Üzenet szövege #}
    <div class="form-group">
        {{ form_label(form.message, 'Üzenet szövege') }}
        {{ form_widget(form.message) }}
        {{ form_errors(form.message) }}
    </div>

    {# Küldés #}
    <div>
        <button class="btn btn-lg btn-warning btn-custom w-100 mt-4" type="submit">Küldés</button>
    </div>
{{ form_end(form) }}