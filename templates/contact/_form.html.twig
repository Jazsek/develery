{{ form_start(form) }}
    <div>{{ form_errors(form) }}</div>

    {# Név #}
    <div class="form-group">
        {{ form_label(form.name, 'Név') }}
        {{ form_widget(form.name) }}
    </div>

    {# Email #}
    <div class="form-group">
        {{ form_label(form.email, 'E-mail') }}
        {{ form_widget(form.email) }}
    </div>

    {# Üzenet #}
    <div class="form-group">
        {{ form_label(form.message, 'Üzenet') }}
        {{ form_widget(form.message) }}
    </div>

    {# Küldés #}
    <div>
        <button class="btn btn-lg btn-warning btn-custom w-100 mt-4" type="submit">Küldés</button>
    </div>
{{ form_end(form) }}